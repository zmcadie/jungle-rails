<section class="products-show">

  <header class="page-header">
    <h1><%= link_to @product.category.name, @product.category %> &raquo; <%= @product.name %></h1>
  </header>

  <article class="product-detail">

    <div class="row">

      <div class="col-sm-4">
        <%= image_tag @product.image.url, class: 'main-img' %>
      </div>

      <div class="col-sm-8">
        <dl class="dl-horizontal">
          <dt>Name</dt>
          <dd><%= @product.name %></dd>
          <dt>Description</dt>
          <dd><%= @product.description %></dd>
          <dt>Quantity</dt>
          <dd><%= @product.quantity %></dd>
          <dt>Price</dt>
          <dd><%= @product.price %></dd>
        </dl>
      </div>
    </div>

    <% if current_user %>
      <div class="row">
        <h4>What do you think?</h4>
        <%= form_for :review, url: "/products/#{@product.id}/reviews", method: 'POST' do |f| %>
        <%= f.hidden_field :user_id, value: current_user.id %>
        <%= f.hidden_field :product_id, value: @product.id %>
        <div>Rating: </div><div><span>1 <%= f.radio_button :rating, '1' %></span>
                           <span>| 2 <%= f.radio_button :rating, '2' %></span>
                           <span>| 3 <%= f.radio_button :rating, '3', checked: true %></span>
                           <span>| 4 <%= f.radio_button :rating, '4' %></span>
                           <span>| 5 <%= f.radio_button :rating, '5' %></span></div>
        <div>Review: </div><div><%= f.text_field :description %></div>
        <div><%= f.submit "Review" %></div>
        <% end %>
      </div>
    <% end %>
    <div class="row">
    <h4>Reviews</h4>
      <% @product.reviews.each do |review| %>
        <% @user = User.find(review.user_id) %>
        <div>
          <div>User: <%= @user.email %></div>
          <div>Rating: <%= review.rating %></div>
          <% if review.description %>
            <div>Description: <%= review.description %></div>
          <% end %>
        </div>
      <% end %>
    </div>

  </article>

</section>
